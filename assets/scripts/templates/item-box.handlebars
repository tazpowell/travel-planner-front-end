{{#each items as |item|}}

<div id="item-bucket">
  <form class="form-horizontal bucket" data-id="{{item.id}}">
    <div class="form-group">
      <label class="control-label col-sm-3" for="id">ID:</label>
      <div class="col-sm-9">
        <p class="form-control-static">{{item.id}}</p>
      </div>
      <label class="control-label col-sm-3" for="name">Name:</label>
      <div class="col-sm-9">
        <p class="form-control-static">{{item.name}}</p>
      </div>
      <label class="control-label col-sm-3" for="date">Date:</label>
      <div class="col-sm-9">
        <p class="form-control-static">{{item.date}}</p>
      </div>
      <label class="control-label col-sm-3" for="active">Active:</label>
      <div class="col-sm-9">
        <p class="form-control-static">{{item.active}}</p>
      </div>
      <button type="button" class="btn btn-default edit-item-btn" aria-label="Left Align">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true" ></span>
      </button>
      <button type="button" class="btn btn-default delete-item-btn" aria-label="Left Align">
        <span class="glyphicon glyphicon-trash" aria-hidden="true" ></span>
      </button>
    </div>
  </form>
</div>

{{/each}}
