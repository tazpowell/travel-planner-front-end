{{#each items as |item|}}

<div class="bucket-2" data-id="{{item.id}}">
  <div class="row">
    <div class="col-sm-10 item-card item-name">{{item.name}}</div>
    <div class="col-sm-2 item-card item-label item-active-status glyphicon" data-status="{{item.active}}"></div>
  </div>
  <hr/>
  <div class="row">
    <div class="col-sm-1 item-card item-label glyphicon glyphicon-map-marker"></div>
    <div class="col-sm-11 item-card">{{item.address}}</div>
  </div>
  <hr/>
  <div class="row">
    <div class="col-sm-1 item-card item-label glyphicon glyphicon-link"></div>
    <div class="col-sm-11 item-card"><a href="{{item.url}}">{{item.url}}</a></div>
  </div>
  <hr/>
  <div class="row">
    <div class="col-sm-1 item-card item-label glyphicon glyphicon-time"></div>
    <div class="col-sm-11 item-card">{{item.hours}}</div>
  </div>
  <hr/>
  <div class="row">
    <div class="col-sm-1 item-card item-label glyphicon glyphicon-hourglass"></div>
    <div class="col-sm-5 item-card item-border-right">{{item.duration}}</div>
    <div class="col-sm-1 item-card item-label glyphicon glyphicon-jpy"></div>
    <div class="col-sm-5 item-card">{{item.cost}}</div>
  </div>
  <hr/>
  <div class="row">
    <div class="col-sm-1 item-card item-label glyphicon glyphicon-tag"></div>
    <div class="col-sm-11 item-card">{{item.tags}}</div>
  </div>
  <hr/>
  <div class="row">
    <div class="col-sm-1 item-card item-label glyphicon glyphicon-info-sign"></div>
    <div class="col-sm-11 item-card">{{item.notes}} </div>
  </div>
  <hr/>
  <div class="btn-group-2">
    <button type="button" class="btn btn-default edit-item-btn" aria-label="edit item">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true" ></span>
    </button>
    <button type="button" class="btn btn-default delete-item-btn" aria-label="delete item">
      <span class="glyphicon glyphicon-trash" aria-hidden="true" ></span>
    </button>
  </div>

</div>


{{/each}}
